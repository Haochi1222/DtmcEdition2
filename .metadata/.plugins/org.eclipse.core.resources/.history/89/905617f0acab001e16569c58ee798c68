@namespace(uri="dut.haochi.dtmc",prefix="")
package dtmc;

class Module{
	val Dtmc[*] dtmc;
}

class Dtmc{
	attr String[*] name;
	attr String[*] variable;
	val State[*] states;
	val Transition[*] transitions;
	val Reward[*] rewards;
	val Line[*] lines;
}

class State{
	attr int name;
	val Transition[*] transitions;
	attr String label;
}

class Transition{
	//attr String name;
	attr String probability;		
	ref State[*]#incoming to;
}

class Reward{
	attr String name;
	val Action[*] actions;
	}
	
class Action{
	attr String name;
	attr double value;
}

class Line{
	//attr String name;		
	ref State[*]#in target;
	ref State[*]#out source;
}

